<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Instruksi untuk pengguna -->
    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan barcode atau masukkan barcode manual"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentTop="true" />

    <!-- Tombol untuk memulai scanning barcode -->
    <Button
        android:id="@+id/scanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Barcode"
        android:padding="10dp"
        android:layout_below="@id/instructionText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- Input field untuk memasukkan barcode secara manual -->
    <EditText
        android:id="@+id/barcodeInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Masukkan barcode secara manual"
        android:inputType="text"
        android:layout_below="@id/scanButton"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <!-- Tombol untuk validasi barcode yang dimasukkan secara manual -->
    <Button
        android:id="@+id/validateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validasi Barcode Manual"
        android:padding="10dp"
        android:layout_below="@id/barcodeInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- TextView untuk menampilkan hasil validasi barcode -->
    <TextView
        android:id="@+id/barcodeResultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil validasi barcode akan muncul di sini"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/validateButton"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
